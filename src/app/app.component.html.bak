<nz-layout>
  <nz-sider nzCollapsible [(nzCollapsed)]="isCollapsed" [nzTrigger]="null">
    <div class="logo">
    </div>
    <ul nz-menu [nzTheme]="'dark'" [nzMode]="isCollapsed?'vertical':'inline'">
      <li nz-menu-item>
        <span title><i class="anticon anticon-user"></i><span class="nav-text">订单管理</span></span>
      </li>
      <li nz-menu-item>
        <span title><i class="anticon anticon-team"></i><span class="nav-text">贷款管理</span></span>
      </li>
      <li nz-menu-item>
        <span title><i class="anticon anticon-team"></i><span class="nav-text">还款管理</span></span>
      </li>
    </ul>
  </nz-sider>
  <nz-layout>
    <nz-header style="background: #fff; padding:0;">
      <i class="anticon trigger" [class.anticon-menu-fold]="!isCollapsed" [class.anticon-menu-unfold]="isCollapsed" (click)="isCollapsed=!isCollapsed"></i>
    </nz-header>
    <nz-content style="margin:0 16px;">
      <nz-breadcrumb style="margin:12px 0;">
        <nz-breadcrumb-item>User</nz-breadcrumb-item>
        <nz-breadcrumb-item>Bill</nz-breadcrumb-item>
      </nz-breadcrumb>
      <div style="padding:24px; background: #fff; min-height: 360px;">
        <nz-table #nzTable [nzDataSource]="data" [nzPageSize]="10" nzBordered [nzScroll]="{x:'', y:'100px'}">
          <thead nz-thead>
          <tr>
            <th nz-th style="width:30%"><span>序号</span></th>
            <th nz-th><span>贷款编号</span></th>
            <th nz-th><span>订单编号</span></th>
            <th nz-th><span>用户ID</span></th>
            <th nz-th><span>烟草证号</span></th>
            <th nz-th><span>用户姓名</span></th>
            <th nz-th><span>申请时间</span></th>
            <th nz-th><span>放款时间</span></th>
            <th nz-th><span>账期到期日</span></th>
            <th nz-th><span>贷款到期日</span></th>
            <th nz-th><span>贷款金额</span></th>
            <th nz-th><span>贷款日利率</span></th>
            <th nz-th><span>昨日利息</span></th>
            <th nz-th><span>待还金额</span></th>
            <th nz-th><span>待还本金</span></th>
            <th nz-th><span>待还利息</span></th>
            <th nz-th><span>已还金额</span></th>
            <th nz-th><span>已还本金</span></th>
            <th nz-th><span>已还利息</span></th>
            <th nz-th><span>贷款天数</span></th>
            <th nz-th><span>逾期天数</span></th>
            <th nz-th><span>逾期金额</span></th>
            <th nz-th><span>逾期本金</span></th>
            <th nz-th><span>逾期利息</span></th>
            <th nz-th><span>罚息金额</span></th>
            <th nz-th><span>是否有账期</span></th>
            <th nz-th><span>还款状态</span></th>
            <th nz-th><span>结清时间</span></th>
            <th nz-th><span>操作</span></th>
          </tr>
          </thead>
          <tbody nz-tbody>
          <tr nz-tbody-tr *ngFor="let data of nzTable.data">
            <td nz-td>
              <a>{{data.name}}</a>
            </td>
            <td nz-td>{{data.age}}</td>
            <td nz-td>{{data.address}}</td>
            <td nz-td>
                <span>
                  <a href="#">Action 一 {{data.name}}</a>
                  <span nz-table-divider></span>
                  <a href="#">Delete</a>
                  <span nz-table-divider></span>
                  <nz-dropdown>
                    <a class="ant-dropdown-link" nz-dropdown>
                      More actions <i class="anticon anticon-down"></i>
                    </a>
                    <ul nz-menu>
                      <li nz-menu-item>
                        <a target="_blank" rel="noopener noreferrer" href="http://www.alipay.com/">1st menu item</a>
                      </li>
                      <li nz-menu-item>
                        <a target="_blank" rel="noopener noreferrer" href="http://www.alipay.com/">2nd menu item</a>
                      </li>
                      <li nz-menu-item>
                        <a target="_blank" rel="noopener noreferrer" href="http://www.alipay.com/">3rd menu item</a>
                      </li>
                    </ul>
                  </nz-dropdown>
                </span>
            </td>
          </tr>
          </tbody>
        </nz-table>
      </div>
    </nz-content>
    <nz-footer style="text-align: center;">Ant Design ©2017 Implement By Angular</nz-footer>
  </nz-layout>
</nz-layout>
